@model ContactManager.Models.Contact
@{
    ViewData["Title"] = "Edytuj kontakt";
    Layout = "_Layout";
    var groups = ViewBag.Groups as List<ContactManager.Models.Group> ?? new List<ContactManager.Models.Group>();
    var selectedGroupIds = ViewBag.SelectedGroupIds as List<int> ?? new List<int>();
}

<h2>Edytuj kontakt</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label>Grupy:</label>
        <select id="groupSelect" name="groupIds" multiple class="form-control">
            @foreach (var group in groups)
            {
                <option value="@group.Id" selected="@(selectedGroupIds.Contains(group.Id) ? "selected" : null)">
                    @group.Name
                </option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Zapisz</button>
</form>
